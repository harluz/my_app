<div class="col-sm-6　col-lg-3">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title text-center"><%= order.english %></h5>
      <p class="card-title text-center"><%= order.japanese %></p>
      <a href="#" class="btn btn-primary">詳細</a>
      <span class="timestamp">
        Posted <%= time_ago_in_words(order.created_at) %> ago.
      </span>
      <% if current_user.admin? %>
      <%= link_to "delete", order_path(order), method: :delete,
                            data: { confirm: "You sure?" } %>
      <%= link_to "edit", edit_order_path(order.id) %>
    <% end %>
    </div>
  </div>
</div>
