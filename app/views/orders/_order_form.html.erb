<%= form_with(model: @order, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
  
    <%= f.label :english %>
    <%= f.text_field :english, class: 'form-control', placeholder: 'Please enter english'%>

    <%= f.label :japanese %>
    <%= f.text_field :japanese, class: 'form-control', placeholder: '日本語を入力してください'%>

    <%= f.label :comment %>
    <%= f.text_area :comment, class: 'form-control', placeholder: 'コメントの記入が可能です'%>

    <%= f.submit "Request an order", class: "btn btn-primary" %>
<% end %>