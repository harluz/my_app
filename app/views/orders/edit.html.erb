<%= form_with(model: @order, lacal:true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
    <%= f.label :english %>
    <%= f.text_field :english, class: 'form-control' %>

    <%= f.label :japanese %>
    <%= f.text_field :japanese, class: 'form-control' %>

    <%= f.label :comment %>
    <%= f.text_area :comment, class: 'form-control', placeholder: 'コメントの記入が可能です'%>

    <%= f.submit "Request an order", class: "btn btn-primary" %>
<% end %>